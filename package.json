{
  "name": "github-feed",
  "version": "2.0.0",
  "description": "Automate checking of common repos for updates",
  "main": "electron/main.js",
  "repository": {
    "type": "git",
    "url": "https://github.com/bookman25/github-feed.git"
  },
  "devDependencies": {
    "@types/aphrodite": "^0.5.4",
    "@types/electron": "^1.6.10",
    "@types/enzyme": "^2.8.9",
    "@types/jest": "^16.0.4",
    "@types/node": "^7.0.0",
    "@types/node-schedule": "0.0.34",
    "@types/nodemailer": "^3.1.3",
    "@types/react": "15.*",
    "@types/react-dom": "^15.*",
    "coveralls": "^2.11.15",
    "electron": "^1.7.8",
    "electron-builder": "^19.33.0",
    "enzyme": "2.*",
    "enzyme-to-json": "^1.4.5",
    "fbjs-scripts": "^0.7.1",
    "jest": "^18.1.0",
    "minicat": "^1.0.0",
    "react-test-renderer": "15.*",
    "ts-jest": "^18.0.1",
    "tslib": "^1.7.1",
    "tslint": "^5.7.0",
    "tslint-microsoft-contrib": "^5.0.1",
    "tslint-misc-rules": "^3.2.0",
    "tslint-react": "^3.2.0",
    "typescript": "^2.5.3"
  },
  "dependencies": {
    "aphrodite": "^1.1.0",
    "bluebird": "^3.4.6",
    "github": "^11.0.0",
    "node-notifier": "^4.6.1",
    "node-schedule": "^1.1.1",
    "nodemailer": "^4.1.1",
    "react": "15.*",
    "react-dom": "15.*"
  },
  "scripts": {
    "ci": "yarn lint && yarn test -- --coverage && yarn coveralls",
    "cleanfiles": "node scripts/clean",
    "coveralls": "minicat coverage/lcov.info | coveralls && rm -rf ./coverage",
    "lint": "tslint --exclude \"node_modules/**\" --exclude \"**/*.d.ts\" **/*.ts **/*.tsx",
    "pack": "tsc && build --dir",
    "dist": "tsc && build --x64",
    "start": "tsc && electron .",
    "test": "jest --config jest.json",
    "watch-test": "yarn test -- --watch"
  },
  "author": "Bryan Nicholls",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/bookman25/github-feed/issues"
  },
  "build": {
    "appId": "github.feed",
    "win": {
      "icon": "electron/rss.ico"
    }
  }
}
