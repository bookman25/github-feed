{
	"automock": true,
	"collectCoverageFrom": [
		"**/*.ts",
		"**/*.tsx",
		"!**/*.d.ts"
	],
	"coverageThreshold": {
		"global": {
			"branches": 90,
			"functions": 90,
			"lines": 90,
			"statements": 90
		}
	},
    "globals": {
      "__TS_CONFIG__": {
        "noEmitHelpers": true
      }
    },
	"moduleFileExtensions": [
		"ts",
		"tsx",
		"js",
		"json"
	],
	"notify": true,
	"transform": {
		"\\.(ts|tsx)$": "<rootDir>/testHelpers/preprocessor.js"
	},
	"setupTestFrameworkScriptFile": "<rootDir>/testHelpers/environmentSetup.js",
	"testRegex": "Spec.tsx?$",
	"timers": "fake",
	"unmockedModulePathPatterns": [
		"<rootDir>/testHelpers",
		"<rootDir>/node_modules/enzyme",
		"<rootDir>/node_modules/ts-jest",
		"<rootDir>/node_modules/react",
		"<rootDir>/node_modules/bluebird"
	]
}