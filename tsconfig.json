{
	"compilerOptions": {
		"allowSyntheticDefaultImports": true,
		"jsx": "react",
		"importHelpers": true,
		"noEmitHelpers": true,
		"noEmitOnError": true,
		"noImplicitAny": false,
		"noUnusedLocals": true,
		"noUnusedParameters": true,
		"module": "commonjs",
		"moduleResolution": "node",
		"removeComments": false,
		"target": "es6",
		"baseUrl": ".",
		"types": [
			"node",
			"react-dom",
			"jest"
		]
	},
	"exclude": [
		"node_modules"
	]
}